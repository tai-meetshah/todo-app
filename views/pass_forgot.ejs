<!DOCTYPE html>
<html class="loading" lang="en" data-textdirection="ltr">
<!-- BEGIN: Head-->

<head>
    <%- include('_layouts/head') %>
    <title>Forgot Password | <%= title %></title>
    <link rel="stylesheet" type="text/css" href="/app-assets/css/pages/login.css">
</head>
<!-- END:  -->

<body class="vertical-layout page-header-light vertical-menu-collapsible vertical-dark-menu preload-transitions 1-column login-bg blank-page blank-page" data-open="click" data-menu="vertical-dark-menu" data-col="1-column">
    <div class="row">
        <div class="col s12">
            <div class="container">
                <div id="login-page" class="row">
                    <div class="col s12 m6 l4 z-depth-4 card-panel border-radius-6 login-card bg-opacity-8">
                        <form class="login-form" id="form" action="/forgot" method="post" onsubmit="return validate()">
                            <div class="row">
                                <div class="input-field col s12">
                                    <h5 class="ml-4">Forgot Password</h5>
                                    <p class="ml-4">You can reset your password</p>
                                </div>
                            </div>
                            <%- messages('messages', locals) %>
                            <div class="row margin">
                                <div class="input-field col s12">
                                    <i class="material-icons prefix pt-2">person_outline</i>
                                    <input id="email" type="text" name="email">
                                    <label for="email" class="center-align">Email</label>
                                    <small>
                                        <div id="error1" class="error" style="margin-left: 3rem;"></div>
                                    </small>
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-field col s12">
                                    <button class="btn waves-effect waves-light border-round gradient-45deg-purple-deep-orange col s12" type="submit" id="submitBtn">Forgot Password</button>
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-field col s12">
                                    <p class="margin medium-small"><a href="/login">Login</a></p>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="content-overlay"></div>
        </div>
    </div>

    <script>
        const form = document.getElementById('form');

        // form
        form.addEventListener('submit', (e) => {
            e.preventDefault();
        })

        function validate() {
            let returnVal = true;

            const email = document.getElementById('email');

            const emailValue = email.value.trim();

            if (emailValue == '') {
                document.getElementById('error1').innerText = 'Please enter email.';
                returnVal = false;
            } else if (!validateEmail(emailValue)) {
                document.getElementById('error1').innerText = 'Please enter valid email.';
                returnVal = false;
            } else {
                document.getElementById('error1').innerText = '';
            }

            if (returnVal) {
                document.getElementById('submitBtn').disabled = true;
                form.submit();
            }
        }

        function validateEmail(email) {
            return email.match(
                /^(([^<>()[\]\\.,;:\s@\"]+(\.[^<>()[\]\\.,;:\s@\"]+)*)|(\".+\"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/
            );
        }
    </script>
    <%- include('_layouts/commonJs') %>
</body>

</html>